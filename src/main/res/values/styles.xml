<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Style du titre du layout -->
    <dimen name="styles.layoutTitle.marginTop" translatable="false">40dp</dimen>
    <dimen name="styles.layoutTitle.fontSize" translatable="false">28dp</dimen>
    <color name="styles.layoutTitle.fontColor">@color/darkOrange</color>

    <!-- Styles des boutons -->
    <!-- BackgroundColors from "https://coolors.co/03045e-023e8a-0077b6-0096c7-00b4d8-48cae4-90e0ef-ade8f4-caf0f8" -->
    <color name="styles.Buttons.backgroundColor" translatable="false">#00B4D8</color>

    <!-- Calculator buttons style (unlocked state) -->
    <dimen name="calculatorNumberWidth">64dp</dimen>
    <dimen name="calculatorNumberHeight">48dp</dimen>
    <style name="calculatorNumberStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/calculatorNumberWidth</item>
        <item name="android:layout_height">@dimen/calculatorNumberHeight</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">#F1FAEE</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">32dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Calculator buttons style (locked state) -->
    <style name="calculatorNumberLockedStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">@dimen/calculatorNumberWidth</item>
        <item name="android:layout_height">@dimen/calculatorNumberHeight</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">#EEEEEE</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">32dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- Control buttons style -->
    <dimen name="styles_bottomControls_width" translatable="false">180dp</dimen>
    <dimen name="styles_bottomControls_height" translatable="false">50dp</dimen>

    <dimen name="styles_wrapper_marginTop" transtatable="false">20dp</dimen>

</resources>